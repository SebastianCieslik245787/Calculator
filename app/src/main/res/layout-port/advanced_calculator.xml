<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/resultFieldAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/resultTextViewMargin"
        android:gravity="end|bottom"
        android:textSize="@dimen/resultTextSize"

        app:layout_constraintBottom_toTopOf="@+id/buttonsGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/buttonsGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="5"
        android:padding="5dp"
        android:rowCount="6"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultFieldAC">

        <Button
            android:id="@+id/buttonSin"
            style="@style/buttonOperationSmallerTextSize"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/sin" />

        <Button
            android:id="@+id/buttonCos"
            style="@style/buttonOperationSmallerTextSize"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/cos" />

        <Button
            android:id="@+id/buttonTan"
            style="@style/buttonOperationSmallerTextSize"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/tan" />

        <Button
            android:id="@+id/buttonSqrt"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="2"
            android:layout_column="4"
            android:text="@string/sqrt" />

        <Button
            android:id="@+id/buttonXY"
            style="@style/buttonOperationSmallerTextSize"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/xy" />

        <Button
            android:id="@+id/buttonX2"
            style="@style/buttonOperationSmallerTextSize"
            android:layout_row="0"
            android:layout_column="4"
            android:text="@string/x2" />

        <Button
            android:id="@+id/buttonLog"
            style="@style/buttonOperationSmallerTextSize"
            android:layout_row="1"
            android:layout_column="4"
            android:text="@string/log" />

        <Button
            android:id="@+id/buttonLn"
            style="@style/buttonOperationSmallerTextSize"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/ln" />

        <Button
            android:id="@+id/buttonPercent"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/percent" />

        <Button
            android:id="@+id/buttonBrackets"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/brackets" />

        <Button
            android:id="@+id/buttonClearAC"
            style="@style/buttonOperationSmallerTextSize"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/ac" />

        <Button
            android:id="@+id/buttonDeleteAC"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/delete" />

        <Button
            android:id="@+id/buttonDivideAC"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="3"
            android:layout_column="3"
            android:text="@string/div" />

        <Button
            android:id="@+id/buttonMultiplyAC"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="3"
            android:layout_column="4"
            android:text="@string/x" />

        <Button
            android:id="@+id/buttonSevenAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/_7" />

        <Button
            android:id="@+id/buttonEightAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/_8" />

        <Button
            android:id="@+id/buttonNineAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/_9" />

        <Button
            android:id="@+id/buttonSubtractAC"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="4"
            android:layout_column="4"
            android:text="@string/sub" />

        <Button
            android:id="@+id/buttonFourAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/_4" />

        <Button
            android:id="@+id/buttonFiveAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/_5" />

        <Button
            android:id="@+id/buttonSixAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/_6" />

        <Button
            android:id="@+id/buttonAddAC"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="4"
            android:layout_column="3"
            android:text="@string/add" />

        <Button
            android:id="@+id/buttonOneAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/_1" />

        <Button
            android:id="@+id/buttonTwoAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="4"
            android:layout_column="1"
            android:text="@string/_2" />

        <Button
            android:id="@+id/buttonThreeAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/_3" />

        <Button
            android:id="@+id/buttonResultAC"
            style="@style/buttonResultAdvancedCalc"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:text="@string/result" />

        <Button
            android:id="@+id/buttonSignAC"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="5"
            android:layout_column="0"
            android:text="@string/changeSign" />

        <Button
            android:id="@+id/buttonZeroAC"
            style="@style/buttonNumberAdvancedCalc"
            android:layout_row="5"
            android:layout_column="1"
            android:text="@string/_0" />

        <Button
            android:id="@+id/buttonDotAC"
            style="@style/buttonOperatorAdvancedCalc"
            android:layout_row="5"
            android:layout_column="2"
            android:text="@string/dot" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>