<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backgroundColor"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/resultField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end|bottom"
        android:layout_margin="@dimen/resultTextViewMargin"
        android:textSize="@dimen/resultTextSize"
        app:layout_constraintHeight_percent="0.45"/>

    <GridLayout
        android:id="@+id/buttonsGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultField"
        app:layout_constraintHeight_percent="0.55"
        android:padding="20dp"
        android:columnCount="4"
        android:rowCount="5"
        >

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/ac"
            android:backgroundTint="@color/buttonOperationColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/delete"
            android:backgroundTint="@color/buttonOperationColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/div"
            android:backgroundTint="@color/buttonOperationColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/x"
            android:backgroundTint="@color/buttonOperationColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/_7"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/_8"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/_9"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/sub"
            android:backgroundTint="@color/buttonOperationColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/_4"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/_5"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/_6"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/add"
            android:backgroundTint="@color/buttonOperationColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/_1"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/_2"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/_3"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonResult"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonResultHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="3"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:text="@string/result"
            android:backgroundTint="@color/buttonResultColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonSign"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="@dimen/buttonMargin"
            android:text="@string/changeSign"
            android:backgroundTint="@color/buttonOperationColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_row="4"

            android:layout_column="1"
            android:layout_margin="@dimen/buttonMargin"
            android:text="@string/_0"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_margin="@dimen/buttonMargin"

            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/dot"
            android:backgroundTint="@color/buttonNumberColor"
            android:textSize="@dimen/buttonTextSize"
            android:textColor="@color/buttonTextColor"
            />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>